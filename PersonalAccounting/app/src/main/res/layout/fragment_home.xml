<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 顶部统计区域 -->
    <LinearLayout
        android:id="@+id/ll_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:background="@color/background_card"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 当日收入 -->
        <TextView
            android:id="@+id/tv_month_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当日收入：0.00元"
            android:textColor="@color/success"
            android:textSize="20sp" />

        <!-- 当日支出 -->
        <TextView
            android:id="@+id/tv_month_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="当日支出：0.00元"
            android:textColor="@color/error"
            android:textSize="20sp" />

        <!-- 当日结余 -->
        <TextView
            android:id="@+id/tv_month_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="当日结余：0.00元"
            android:textColor="@color/primary_dark"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_statistics">
        <!-- 记收入按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_record_income"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:text="记收入"
            android:textColor="@color/text_inverse"
            app:backgroundTint="@color/success"
            app:cornerRadius="8dp" />

        <!-- 记支出按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_record_expense"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:text="记支出"
            android:textColor="@color/text_inverse"
            app:backgroundTint="@color/error"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <!-- 账单列表标题栏 -->
    <LinearLayout
        android:id="@+id/ll_bills_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@color/background_card"
        android:elevation="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_buttons">

        <!-- 日期选择器 -->
        <Spinner
            android:id="@+id/sp_date_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp" />

        <!-- 全部账单按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_all_bills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部账单"
            android:textSize="14sp"
            android:textColor="@color/text_inverse"
            app:backgroundTint="@color/secondary"
            app:cornerRadius="8dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- 底部账单列表区域 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recent_bills"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_bills_header" />

    <!-- 无数据提示 -->
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="暂无近期账单"
        android:textColor="@color/text_hint"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_bills_header" />

</androidx.constraintlayout.widget.ConstraintLayout>
